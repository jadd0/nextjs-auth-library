{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    // Pathing
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/types": ["src/shared/types/index.js"],
      "@/constants": ["src/shared/constants/index.js"],
      "@/validation": ["src/shared/validation/index.js"]
    },
  },
  "include": ["src", "src/core"],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": true
  }
}
